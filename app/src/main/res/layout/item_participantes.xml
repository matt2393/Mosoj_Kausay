<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noviembre"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/textTitItemParticipantes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardItemParticipantes"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardItemParticipantes"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textTitItemParticipantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:id="@+id/textNumNuevoItemPart"
                android:text="1009"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:backgroundTint="@color/teal_700"
                android:background="@drawable/background_number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textNuevoItemParticipantes"
                app:layout_constraintBottom_toTopOf="@id/textNumMigracionItemPart"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textNuevoItemParticipantes"
                android:text="Enrolados"
                android:layout_margin="10dp"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/textNumNuevoItemPart"
                app:layout_constraintStart_toEndOf="@id/textNumNuevoItemPart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/textNumNuevoItemPart"/>
            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:id="@+id/textNumMigracionItemPart"
                android:text="0"
                android:backgroundTint="@color/gray"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_number"
                app:layout_constraintTop_toBottomOf="@id/textNumNuevoItemPart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textMigracionItemParticipantes"
                app:layout_constraintBottom_toTopOf="@id/textNumTotalItemPart"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textMigracionItemParticipantes"
                android:text="Migraciones"
                android:layout_margin="10dp"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/textNumMigracionItemPart"
                app:layout_constraintStart_toEndOf="@id/textNumMigracionItemPart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/textNumMigracionItemPart"/>
            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:id="@+id/textNumTotalItemPart"
                android:text="1009"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:background="@drawable/background_number"
                app:layout_constraintTop_toBottomOf="@id/textNumMigracionItemPart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textTotalItemParticipantes"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textTotalItemParticipantes"
                android:text="Total"
                android:layout_margin="10dp"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/textNumTotalItemPart"
                app:layout_constraintStart_toEndOf="@id/textNumTotalItemPart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/textNumTotalItemPart"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
