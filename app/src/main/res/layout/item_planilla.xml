<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="25dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textTitItemPlanilla"
            android:text="Replydsada"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textTitInicioItemPlanilla"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio:"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/textTitInicioItemPlanilla"
            app:layout_constraintTop_toBottomOf="@id/textTitItemPlanilla"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textInicioItemPlanilla"
            app:layout_constraintBottom_toTopOf="@id/textTitFinItemPlanilla"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInicioItemPlanilla"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/textTitInicioItemPlanilla"
            app:layout_constraintStart_toEndOf="@id/textTitInicioItemPlanilla"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textTitInicioItemPlanilla"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fin:"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:id="@+id/textTitFinItemPlanilla"
            app:layout_constraintTop_toBottomOf="@id/textTitInicioItemPlanilla"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textTitInicioItemPlanilla"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textFinItemPlanilla"
            app:layout_constraintTop_toTopOf="@id/textTitFinItemPlanilla"
            app:layout_constraintStart_toStartOf="@id/textInicioItemPlanilla"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textTitFinItemPlanilla"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>