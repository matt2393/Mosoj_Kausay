<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Administrativas"
        android:id="@+id/checkAdminCrearMess"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/checkPatrocinioCrearMess"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkPatrocinioCrearMess"
        android:layout_marginTop="15dp"
        android:text="Patrocinio"
        app:layout_constraintTop_toBottomOf="@id/checkAdminCrearMess"
        app:layout_constraintBottom_toTopOf="@id/checkTecnicosCrearMess"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkTecnicosCrearMess"
        android:layout_marginTop="15dp"
        android:text="TÃ©cnicos"
        app:layout_constraintTop_toBottomOf="@id/checkPatrocinioCrearMess"
        app:layout_constraintBottom_toTopOf="@id/checkVoluntariosCrearMess"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkVoluntariosCrearMess"
        android:layout_marginTop="15dp"
        android:text="Voluntarios"
        app:layout_constraintTop_toBottomOf="@id/checkTecnicosCrearMess"
        app:layout_constraintBottom_toTopOf="@id/buttonCrearMess"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCrearMess"
        android:layout_marginTop="25dp"
        android:text="Enviar"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/checkVoluntariosCrearMess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>